{% extends 'base.html.twig' %}

{% block title %} Contact {% endblock %}

{% block body %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <div class="bg-white p-5 contact-form">
        <div class="form-group">
            {{ form_start(our_form) }}
            {{ form_row(our_form.fullName, {'attr': {'class': 'form-control'}}) }}


        </div>
        <div class="form-group">
            {{ form_row(our_form.email, {'attr': {'class': 'form-control'}}) }}

        </div>
        <div class="form-group">
            {{ form_row(our_form.message, {'attr': {'class': 'form-control'}}) }}

        </div>
        <div class="text-center">
            <br>
        <div class="form-group">
            <input type="submit" value="Envoyer!" class="btn btn-outline-primary py-3 px-5">
        </div>
        </div>
        {{ form_end(our_form) }}
    </div>

{% endblock %}